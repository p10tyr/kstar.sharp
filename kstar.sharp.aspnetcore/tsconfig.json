{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "strictNullChecks": false,
    "rootDir": "TypeScript",
    "outDir": "wwwroot/js",

    "target": "es5",
    //"lib": [ "es2015", "es6", "dom" ],
    "lib": [ "es6", "dom" ],
    "types": [ "reflect-metadata" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ],
  "compileOnSave": true

}
